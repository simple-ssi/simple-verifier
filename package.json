{
  "name": "@futureforg-ing/salutations",
  "version": "0.0.0-dev.3",
  "description": "An npm package template that says 'hello' and 'goodbye'",
  "license": "UNLICENSED",
  "type": "module",
  "access": "public",
  "repository": {
    "type": "git",
    "url": "[FILL IN YOURS]"
  },
  "keywords": [
    "template"
  ],
  "author": "[FILL IN YOURS]",
  "bugs": {
    "url": "https://FILL.IN.YOURS"
  },
  "homepage": "https://FILL.IN.YOURS",
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "types": "./dist/cjs/types/index.d.ts",
  "main": "./dist/cjs/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "clean": "del-cli ./dist",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && npx echo-cli '{\"type\": \"module\"}' > dist/esm/package.json",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json && npx echo-cli '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "test": "jest",
    "test:full": "npm run full-checker && npm run build && npm run compatibility-checker && npm run packageCheck",
    "linter": "npx eslint src",
    "formatter": "prettier --check .",
    "formatter:fix": "prettier --write .",
    "dependency-checker": "npx depcheck --ignores='@typescript-eslint/eslint-plugin, @typescript-eslint/parser, @types/jest, @types/node, jest-ci-spec-reporter, ts-jest'",
    "compatibility-checker": "npm link && ./build/test/package/checkPackage.sh",
    "full-checker": "npm install && npm run formatter && npm run linter && npm run dependency-checker && npm test",
    "packageCheck": "npm pack --dry-run",
    "prepublishOnly": "npm run full-checker && npm test && npm run build && npm run compatibility-checker",
    "publish:dev-old": "npm version prerelease --preid=dev && npm publish --access public --tag dev",
    "publish:dev": "npm version prerelease --preid=dev && npm publish --access restricted --tag dev && npm dist-tag add $(node -p \"require('./package.json').name + '@' + require('./package.json').version\") latest"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "del-cli": "^6.0.0",
    "depcheck": "^1.4.7",
    "echo-cli": "^2.0.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "jest-ci-spec-reporter": "^1.0.4",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.6",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.24.1"
  },
  "overrides": {
    "glob": "^9.0.0"
  }
}
